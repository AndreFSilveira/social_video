<% provide(:title, t("page.title.tags.index") ) %>
<div class="container video-index">
<h1 class="center"><%= t("page.title.tags.index") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.tag.name")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td class="tag-link truncate"><%= tag.name %></td>
        <td><%= link_to edit_tag_path(tag), class: 'btn-floating btn-large waves-effect waves-light tooltipped lime darken-1',
                        'data-position' => 'top', 'data-delay' => '50',
                        'data-tooltip' => t("page.model.action.edit") do %>
              <i class="material-icons right">create</i>
          <%end%>
        </td>
        <td><%= link_to  tag, method: :delete, data: { confirm: t("message.are_you_sure") },
                         class: 'btn-floating btn-large waves-effect waves-light tooltipped deep-orange accent-4',
                         'data-position' => 'top', 'data-delay' => '50',
                         'data-tooltip' => t("page.model.action.destroy") do%>
              <i class="material-icons right">delete_forever</i>
          <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_tag_path, class: 'waves-effect waves-light btn' do %>
    <i class="material-icons right">add_circle</i>
    <%= t("page.model.action.new") %>
<% end %>
</div>