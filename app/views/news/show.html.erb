<% provide(:title, @news.title ) %>
<div class="container news-show">
  <h2 class="center">
    <strong><%= t("activerecord.attributes.news.title")%></strong> -
    <%= @news.title %>
  </h2>


  <h3><%= t("activerecord.attributes.news.content")%>:</h3>
  <article>
    <%= @news.content %>
  </article>

  <h5 class="blue-text"><%= t("activerecord.models.tag")%>:</h5>
  <% @tags.each  do |tag| %>
      <div class="chip indigo darken-2 white-text">
        <%= tag.name %>
      </div>
  <% end %>

  <h5 class="blue-text"><%= t("page.video.action.show.comment.rating")%>:</h5>
  <p>
    <%= rating_for @news, "news", :star => 5, :disable_after_rate => true %>
  </p>

  <%= link_to edit_news_path(@news), class: 'waves-effect waves-light btn bottom-link' do %>
      <i class="material-icons right">mode_edit</i>
      <%= t("page.model.action.edit")%>
  <%end%>

  <%= render 'comments/comments' %>

  <% if logged_in? %>
    <h5 class="blue-text"><%= t("page.news.action.show.comment.title")%>:</h5>
    <%= render 'news/comment_form' %>
  <% end %>

  <%= link_to news_index_path, class: 'waves-effect waves-light btn lime darken-2 bottom-link' do %>
    <i class="material-icons left">reply</i>
    <%= t("page.news.action.new.back")%>
  <%end%>

</div>
