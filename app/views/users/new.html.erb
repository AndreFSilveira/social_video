<% provide(:title, 'Sign up') %>
<h1 class="center">Sign up</h1>

<div class="row">
  <div class="col m6 s12 offset-m3">
    <%= simple_form_for @user do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.input :name, wrapper: :materialize_input %>
        <%= f.input :email, wrapper: :materialize_input %>
        <%= f.input :password, wrapper: :materialize_input %>
        <%= f.input :password_confirmation, wrapper: :materialize_input %>

        <%= f.button :button, wrapper: :materialize_button  %>
    <% end %>
  </div>
</div>