<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
        <p><strong><%= t("activerecord.attributes.user.email") %></strong> : <%= @user.email%></p>
        <% if @user.admin? %>
          <p><strong><%= t("activerecord.attributes.user.admin")%></strong></p>
        <% end %>
        <% if current_user?(@user) %>
          <%= link_to edit_user_path(@user), class: 'waves-effect waves-light btn' do %>
              <i class="material-icons right">mode_edit</i>
            <%= t("page.user.show.action.edit") %>
          <% end %>
        <% end %>
      </section>
    </aside>
  </div>
</div>